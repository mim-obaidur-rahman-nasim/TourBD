<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nhs.tourbd">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TourBD"
        tools:targetApi="31">
        <activity
            android:name=".activity_populer_place_open"
            android:exported="false" />
        <activity
            android:name=".activity_event_open"
            android:exported="false" />
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity_explore"
            android:exported="false"
            android:label="এক্সপ্লোর"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".activity_popular_place"
            android:exported="false"
            android:label="জনপ্রিয় স্থান"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".activity_hotel_resorts"
            android:exported="false"
            android:label="হোটেল রিসোর্ট"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".activity_tour_plan"
            android:exported="false"
            android:label="ট্যুর প্ল্যান"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".activity_travel_tips"
            android:exported="false"
            android:label="ট্রাভেল টিপস"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".activity_request"
            android:exported="false"
            android:label="রিকোয়েস্ট"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>