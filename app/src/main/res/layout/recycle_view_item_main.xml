

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="25dp"
    android:layout_marginBottom="20dp">

    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/id_pl_poster"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/id_pl_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/shamim_cholontika"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"

            android:gravity="left"
            android:shadowColor="#000000"
            android:shadowDx="7"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="সিলেট চা বাগান"
            android:textColor="#FFFFFF"
            android:textSize="35dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/id_pl_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="132dp"
        android:layout_marginLeft="15dp"
        android:gravity="left"
        android:text="কিছুটা বিস্তারিত....বাংলাদেশ জাতীয় জাদুঘর বাংলাদেশের রাজধানী ঢাকা শহরে অবস্থিত দেশের জাতীয় জাদুঘর। ........"
        android:textColor="#000000"
        android:textSize="17dp" />


</androidx.cardview.widget.CardView>



